<ul id="lists">
  <% @lists.each do |list| %>
    <li>
      <a href = "lists/<%= @lists.index(list) %>"
        <h2><%= list[:name] %></h2>
        <p><%= list[:todos].size %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <div class="actions">
    <a class="add" href = "/lists/new">New List</a>
  </div>
<% end %>